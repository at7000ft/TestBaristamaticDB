<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
	<!--
		In this example, we're running in a simple Java SE virtual machine (VM) and don't have access to a
		JTA transaction manager (as when running in a J2EE container), so we set the transaction type to RESOURCE_LOCAL.
	-->
	<persistence-unit name="TestBristamaticMemDB" transaction-type="RESOURCE_LOCAL">
	</persistence-unit>
</persistence>
